# Database (PostgreSQL no Railway)
# Para desenvolvimento local, use SQLite: DATABASE_URL="file:./dev.db"
# Para produção no Railway, use a URL do PostgreSQL fornecida pelo Railway
DATABASE_URL="postgresql://user:password@localhost:5432/monitoria?schema=public"

# JWT Secret
JWT_SECRET="sua-chave-secreta-muito-segura-aqui"

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (para CORS)
FRONTEND_URL="http://localhost:5173"

# Bling OAuth (configure no painel do Bling)
# Para produção no Railway, use:
# BLING_REDIRECT_URI="https://monitoria-web-production.up.railway.app/api/bling/callback"
BLING_REDIRECT_URI="http://localhost:3001/api/bling/callback"
